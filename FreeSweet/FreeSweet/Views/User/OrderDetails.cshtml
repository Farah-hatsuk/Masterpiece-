 @model (FreeSweet.Models.Order order, List<FreeSweet.Models.OrderItem> items)

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container my-5">
  

    <div class="card shadow-sm mb-4" style=" background: #BEEBF0;">
        <h2 class="mb-4" style="margin:20px ">Order #@Model.order.Id Details</h2>
        <div class="card-body">
            <h5 class="card-title mb-3">Order Summary</h5>
            <ul class="list-group list-group-flush">
                <li ><strong>Total Amount:</strong> @(Model.Item1.Date?.ToShortDateString() ?? "N/A")</li>
                <li><strong>Address:</strong> @Model.order.Address</li>
                <li ><strong>Phone:</strong> @Model.order.Phone</li>
                <li ><strong>Date:</strong> @Model.order.Date?.ToString("yyyy-MM-dd")</li>
            </ul>
        </div>
    </div>

    <div class="card shadow-sm" style=" background: #BEEBF0;">
        <div class="card-body" >
            <h5 class="card-title mb-3" >Ordered Items</h5>
            <div class="table-responsive">
                <table class="table table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">Product</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.items)
                        {
                            <tr>
                                <td>
                                    <img src="~/img/shop/shop/@item.Product.Img1" alt="@item.Product.Name" width="60" height="60" class="img-thumbnail" />
                                </td>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>@($"{item.Price:N2} JD ")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-end">
                    <a asp-action="Profile" asp-controller="User" class="btn btn-light">Back to Order History</a>
                </div>
            </div>
        </div>
    </div>
</div>
