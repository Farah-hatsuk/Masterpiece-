<div class="shop-section">
<div class="product-details">
    <!-- Slider Section -->
    <div class="slider">
        <div><img src="/img/shop/shop/@Html.DisplayFor(model => model.Img1)" alt="Image Of product"></div>
        @if (!string.IsNullOrEmpty(Model.Img2))
        {
            <div><img src="/img/shop/shop/@Html.DisplayFor(model => model.Img2)" alt="Image Of product"></div>
        }

        @if (!string.IsNullOrEmpty(Model.Img3))
