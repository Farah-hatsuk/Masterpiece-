<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('bestSellerChart').getContext('2d');
    const bestSellerChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Chocolate Cake', 'Box Of Cinnamon', 'Brownies', 'Vanilla Cake', 'Strawberry Cake'],
            datasets: [{
                label: 'Units Sold',
                data: [25, 12, 6, 8, 10],
                backgroundColor: [
                    '#ff6b6b',
                    '#4ecdc4',
                    '#45b7d1',
                    '#96ceb4',
                    '#f7d794'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 20
                    }
                }
            }
        }
    });
</script>