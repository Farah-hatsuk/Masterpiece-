@model FreeSweet.Models.Recipe

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h4>Recipe</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-controller="Admin" asp-action="Recipe">Back to List</a>
</div>
<br /><br />
<div class="row">
  
    <div class="col-md-10">
        <form asp-action="CreateRecipe" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PrepTime" class="control-label"></label>
                        <input asp-for="PrepTime" class="form-control" />
                        <span asp-validation-for="PrepTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CookTime" class="control-label"></label>
                        <input asp-for="CookTime" class="form-control" />
                        <span asp-validation-for="CookTime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TotalTime" class="control-label"></label>
                        <input asp-for="TotalTime" class="form-control" />
                        <span asp-validation-for="TotalTime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Ingredients </label>
                <textarea name="Ingredient" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Ingredient" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Instructions </label>
                <textarea name="Instructions" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Notes </label>
                <textarea name="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Img1" class="control-label"></label>
                        <input type="file" asp-for="Img1" class="form-control" />
                        <span asp-validation-for="Img1" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Img2" class="control-label"></label>
                        <input type="file" asp-for="Img2" class="form-control" />
                        <span asp-validation-for="Img2" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Img3" class="control-label"></label>
                        <input type="file" asp-for="Img3" class="form-control" />
                        <span asp-validation-for="Img3" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Img4" class="control-label"></label>
                        <input type="file" asp-for="Img4" class="form-control" />
                        <span asp-validation-for="Img4" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Img5" class="control-label"></label>
                        <input type="file" asp-for="Img5" class="form-control" />
                        <span asp-validation-for="Img5" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>




