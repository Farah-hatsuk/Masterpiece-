<!doctype html>
<html lang="en">
<head>
	<title>Sidebar 03</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="~/css/admin/style.css">
	@RenderSection("style", required: false)
</head>
<body>

	<div class="wrapper d-flex align-items-stretch">
		<nav id="sidebar" @* class="active" *@>
			<div class="custom-menu">
				<button type="button" id="sidebarCollapse" class="btn btn-primary">
					<i class="fa fa-bars"></i>
					<span class="sr-only">Toggle Menu</span>
				</button>
			</div>
			<div class="p-4">
				@* <h1><a href="index.html" class="logo">Flash</a></h1> *@
				<img src="~/img/logo.png" style="width: 200px" alt="Alternate Text" />
				@{
					var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
					var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
				}


				<ul class="list-unstyled components mb-5">
					<li class="@(currentAction == "Index" && currentController == "Admin" ? "active" : "")">
						<a asp-action="Index" asp-controller="Admin"><i class="fa fas fa-home mr-3"></i>Home</a>
					</li>
					<li class="@(currentAction == "Category" && currentController == "Admin" ? "active" : "")">
						<a asp-action="Category" asp-controller="Admin"><i class="fas fa-birthday-cake mr-3"></i>Category</a>
					</li>
					<li class="@(currentAction == "Product" && currentController == "Admin" ? "active" : "")">
						<a asp-action="Product" asp-controller="Admin"><i class="fas fa-cookie mr-3"></i>Products</a>
					</li>
					<li class="@(currentAction == "Recipe" && currentController == "Admin" ? "active" : "")">
						<a asp-action="Recipe" asp-controller="Admin"><i class="fas fa-book-open mr-3"></i>Recipe</a>
					</li>
					<li class="@(currentAction == "FeedBack" && currentController == "Admin" ? "active" : "")">
						<a asp-action="FeedBack" asp-controller="Admin"><i class="fa fa-star mr-3"></i>Feedback</a>
					</li>
					<li class="@(currentAction == "Order" && currentController == "Admin" ? "active" : "")">
						<a asp-action="Order" asp-controller="Admin"><i class="fas fa-shopping-cart mr-3"></i>Order</a>
					</li>
					<li class="@(currentAction == "SpecialOrder" && currentController == "Admin" ? "active" : "")">
						<a asp-action="SpecialOrder" asp-controller="Admin"><i class="fas fa-clipboard-list mr-3"></i>Special Order</a>
					</li>
					<li>
						<a asp-action="Logout" asp-controller="User"><i class="fa fa-sign-out mr-3"></i>Logout</a>
					</li>
				</ul>

	
		</nav>

		<!-- Page Content  -->
		<div id="content" class="p-4 p-md-5 pt-5" style="background-color:#beebf078">

			@RenderBody()

		</div>
	</div>
	<script src="~/js/admin/bootstrap.js"></script>
	<script src="~/js/admin/jquery.min.js"></script>
	<script src="~/js/admin/popper.js"></script>
	<script src="~/js/admin/main.js"></script>
	<script src="https://kit.fontawesome.com/20637403cc.js" crossorigin="anonymous"></script>

</body>
</html>



