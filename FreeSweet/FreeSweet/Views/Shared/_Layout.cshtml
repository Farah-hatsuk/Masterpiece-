                    <li><a class="aNav" asp-area="" asp-controller="User" asp-action="Logout">Logout</a></li>
                    <li><a class="aNav" asp-area="" asp-controller="User" asp-action="Cart"><i class="fa-solid fa-cart-shopping"></i></a></li>

                 }
                  else{
                    <li><a class="aNav" asp-area="" asp-controller="User" asp-action="RegistrationLogin">Login/Rigester</a></li>

                  }
              

     

